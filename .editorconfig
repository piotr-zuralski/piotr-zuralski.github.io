# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
max_line_length = 120

[*.{py}]
max_line_length = 120

[*.{htm,html}]
indent_size = 2

[*.json]
indent_size = 2
insert_final_newline = true

[*.yml]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.rb]
insert_final_newline = true

[COMMIT_EDITMSG]
max_line_length = 0
